@using System.Data; 

@{
    Layout = null;
}
<!DOCTYPE html>
@using FirstPlaylist.App_Code;
@{

    SongMethods smds = new SongMethods();
    DataSet ds = smds.GetAllSongs();
    Session["playlistClass"] = smds;

}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>

    <script src="~/Scripts/jquery-3.0.0.js"></script>

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/bootstrap.js"></script>

    <link rel="stylesheet" href="~/style.css" />
    <link rel='icon' href='favicon.jpg' type='image/jpg' />

    <script src="https://kit.fontawesome.com/af571886a6.js" crossorigin="anonymous"></script>
</head>
<body>
    <div class="header">
        <h1 class="text">
            <a href="~/viewpage1.cshtml">
            BLUE<b>PLAY</b>
            </a>
        </h1>
    </div>
    <div class="menustyle">
        <a class="btn btn-primary" href="create.cshtml">New song</a> <br /><br />
    </div>
    <div>
        <table class="table-dark table table-hover">
            <tr class="table-light text-dark"><td>Title</td><td>Artist</td><td>Album</td><td>Year</td><td>Length</td><td>Options</td></tr>
            @foreach (DataRow dr in ds.Tables["song"].Rows)
            {
                <tr>

                    <td> @dr["title"]</td>
                    <td> @dr["artist"]</td>
                    <td> @dr["album"]</td>
                    <td> @dr["year"]</td>
                    <td> @dr["length"]</td>
                    <td><a href="~/edit.cshtml?id=@dr["id"]"><i class="fas fa-pencil-alt"></i></a> <a href="~/delete.cshtml?id=@dr["id"]"><i class="far fa-trash-alt"></i></a></td>

                </tr>
            }
        </table>
    </div>
</body>
</html>