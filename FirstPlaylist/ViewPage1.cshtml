@using System.Data;
@{
    Layout = null;
}

<!DOCTYPE html>

@{

    DataSet ds = new DataSet("playlist");

    DataTable songs = new DataTable("song");

    DataColumn title = new DataColumn("title");
    DataColumn artist = new DataColumn("artist");
    DataColumn album = new DataColumn("album");
    DataColumn year = new DataColumn("year");
    DataColumn length = new DataColumn("length");

    ds.Tables.Add(songs);
    songs.Columns.Add(title);
    songs.Columns.Add(artist);
    songs.Columns.Add(album);
    songs.Columns.Add(year);
    songs.Columns.Add(length);

    ds.ReadXml(HttpContext.Current.Server.MapPath("playlist.xml"));

}

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>

    <script src="~/Scripts/jquery-3.0.0.js"></script>

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/bootstrap.js"></script>

    <link rel="stylesheet" href="~/style.css" />
    <link rel='icon' href='favicon.jpg' type='image/jpg' />
</head>
<body>
    <div class="header">
        <h1 class="text">
            BLUE<b>PLAY</b>
        </h1>
        <a class="btn btn-primary float-left" href="create.cshtml">New song</a> <br /><br />

    </div>
    <div>
        <table class="table-dark table table-hover">
            <tr class="table-light text-dark"><td>Titel</td><td>Artiest</td><td>Album</td><td>Jaar</td><td>Lengte</td></tr>
            @foreach (DataRow dr in ds.Tables["song"].Rows)
            {
            <tr>

                <td> @dr["title"]</td>
                <td> @dr["artist"]</td>
                <td> @dr["album"]</td>
                <td> @dr["year"]</td>
                <td> @dr["length"]</td>

            </tr>
            }
        </table>
    </div>
</body>
</html>