@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>

    <script src="~/Scripts/jquery-3.0.0.js"></script>

    <link rel="stylesheet" href="~/Content/bootstrap.css" />
    <script src="~/Scripts/bootstrap.js"></script>

    <link rel="stylesheet" href="~/style.css" />
    <link rel='icon' href='favicon.jpg' type='image/jpg' />
</head>
<body>
    <div class="header">
        <h1 class="text">
            BLUE<b>PLAY</b>
        </h1>

    </div>
    <div>
        <a class="page-link" href="~/viewpage1.cshtml">Go back to homepage</a>
        Create page
        <form method="post" action="#">
            <input class="form-control mb-2" type="text" name="title" />
            <input class="form-control mb-2" type="text" name="artist" />
            <input class="form-control mb-2" type="text" name="album" />
            <input class="form-control mb-2" type="text" name="year" />
            <input class="form-control mb-2" type="text" name="length" />
            <input class="btn-sm" type="submit" value="save" />
        </form>
    </div>

    @{
        if (IsPost)
        {
            string title = Request.Form["title"];
            string artist = Request.Form["artist"];
            string album = Request.Form["album"];
            string year = Request.Form["year"];
            string length = Request.Form["length"];

            <div>
                <span class="text-info">You have submitted: @title @artist @album @year @length</span>
            </div>
            Response.Redirect("viewpage1.cshtml");
        }


    }
</body>
</html>
